<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="fontFamily">@font/quaver</item>
		<item name="android:fontFamily">@font/quaver</item>
		<item name="android:textAllCaps">true</item>
    </style>

	<style name="ExerciseRecyclerViewStyle">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_marginBottom">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:background">@color/colorPrimary</item>
		<item name="android:textAppearance">@android:style/TextAppearance.Large</item>
		<item name="fontFamily">@font/quaver</item>
		<item name="android:fontFamily">@font/quaver</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="MaterialGworl" parent="Theme.MaterialComponents">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorSecondary">@color/colorAccent</item>
		<item name="fontFamily">@font/quaver</item>
		<item name="android:fontFamily">@font/quaver</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

	<style name="DarkSpinner" parent="android:Theme.Holo.Dialog">
		<item name="android:colorBackground">@color/darkGrey</item>
		<item name="background">@color/darkGrey</item>
		<item name="android:textColor">@color/LightGrey</item>
		<item name="android:spinnerStyle">@style/DarkSpinner</item>
	</style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>