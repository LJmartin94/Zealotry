<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainMenu.Overview.BackupData.BackupManagement">

	<Button
		android:id="@+id/makebackup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="50dp"
		android:paddingBottom="50dp"
		app:layout_constraintTop_toTopOf="parent"
		android:text="Backup Current Data"
		android:onClick="initiateDatabaseBackup"/>

	<Button
		android:id="@+id/restorebackup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="50dp"
		android:paddingBottom="50dp"
		app:layout_constraintTop_toBottomOf="@+id/makebackup"
		android:text="Restore From Backup"
		android:onClick="initiateDatabaseRestore"/>
</androidx.constraintlayout.widget.ConstraintLayout>